@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;">
    <h2 class="mb-4 text-center text-white">¿Has olvidado tu contraseña?</h2>
    <div class="row justify-content-center w-100">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-envelope-lock" style="font-size: 3rem; color: #0d6efd;"></i>
                    </div>
                    <form method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Enviar</button>
                    </form>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success mt-3">@ViewBag.Message</div>
                    }
                    <div class="mt-3 text-center">
                        <a asp-action="Index" asp-controller="Home" class="text-decoration-none">Volver al login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
