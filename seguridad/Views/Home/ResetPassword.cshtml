@{
    ViewData["Title"] = "Restablecer contraseña";
}

<div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;">
    <h2 class="mb-4 text-center text-white">Restablecer contraseña para @ViewBag.Email</h2>
    <div class="row justify-content-center w-100">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Nueva contraseña</label>
                            <input type="password" id="newPassword" name="newPassword" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Restablecer</button>
                    </form>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info mt-3">@ViewBag.Message</div>
                    }
                    <div class="mt-3 text-center">
                        <a asp-action="Index" asp-controller="Home" class="text-decoration-none">Volver al login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
