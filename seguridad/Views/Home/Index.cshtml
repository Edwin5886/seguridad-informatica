@{
    ViewData["Title"] = "Inicio";
}

<div class="dark-gradient-bg d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;">
    <h2 class="mb-4 text-center text-white">Bienvenido</h2>
    <div class="row justify-content-center w-100">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle" style="font-size: 3rem; color: #0d6efd;"></i>
                    </div>
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Contraseña</label>
                            <input type="password" id="Password" name="Password" class="form-control" required />
                        </div>
                        <div class="mb-3 text-center">
                            <div class="g-recaptcha" data-sitekey="6LfzMswrAAAAAFDaG71ILqbIxCUbmV8EL8csuo96"></div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Entrar</button>
                    </form>
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
                    }
                    <div class="mt-3 text-center">
                        <a asp-action="ForgotPassword" asp-controller="Home">¿Has olvidado tu contraseña?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
