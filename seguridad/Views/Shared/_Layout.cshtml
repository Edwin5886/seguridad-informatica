@{
    var usuarioEmail = Context.Session.GetString("UsuarioEmail");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - seguridad</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/seguridad.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SEGURIDAD INFORMATICA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            <style>
                body {
                    background: #e6fcff;
                    font-family: 'Segoe UI', Arial, sans-serif;
                    margin: 0;
                    padding: 0;
                }

                .header-bar {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100vw;
                    height: 50px;
                    background: #fff;
                    color: #222;
                    font-size: 1.5em;
                    font-weight: bold;
                    display: flex;
                    align-items: center;
                    padding-left: 30px;
                    z-index: 200;
                    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
                }

                .menu-sidebar {
                    position: fixed;
                    top: 50px;
                    left: 0;
                    width: 260px;
                    height: calc(100vh - 50px);
                    background: #f2f2f2;
                    border-right: 3px solid #f2f2f2;
                    box-shadow: 2px 0 8px rgba(0,0,0,0.08);
                    padding-top: 40px;
                    z-index: 100;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                }

                .menu-list {
                    list-style: none;
                    padding: 0;
                    margin: 0;
                    width: 90%;
                }

                    .menu-list li {
                        margin-bottom: 18px;
                    }

                .menu-link {
                    display: flex;
                    align-items: center;
                    font-size: 1.15em;
                    font-weight: bold;
                    color: #222;
                    text-decoration: none;
                    padding: 10px 16px;
                    border-radius: 6px;
                    transition: background 0.2s;
                }

                    .menu-link:hover, .menu-link.active {
                        background: #fff;
                        color: #18baff;
                    }

                .menu-icon {
                    width: 24px;
                    height: 24px;
                    margin-right: 12px;
                    fill: #222;
                }

                /* Margen solo si el usuario está logueado */
                .main-content.with-menu {
                    margin-left: 260px;
                    margin-top: 50px;
                    padding: 40px;
                }

                .main-content.no-menu {
                    margin: 0;
                    padding: 40px;
                }
            </style>

            <div class="header-bar">
                SEGURIDAD INFORMATICA
            </div>

            @if (!string.IsNullOrEmpty(usuarioEmail))
            {
                <div class="menu-sidebar">
                    <ul class="menu-list">
                        <li>
                            <a class="menu-link" href="/Home/Usuarios">
                                <svg class="menu-icon" viewBox="0 0 24 24"><path d="M12 12c2.7 0 8 1.34 8 4v2H4v-2c0-2.66 5.3-4 8-4zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8z" /></svg>
                                Usuarios
                            </a>
                        </li>
                        <li>
                            <a class="menu-link" href="/Home/Roles">
                                <svg class="menu-icon" viewBox="0 0 24 24"><path d="M12 12c2.7 0 8 1.34 8 4v2H4v-2c0-2.66 5.3-4 8-4zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8z" /></svg>
                                Roles
                            </a>
                        </li>
                        <li>
                            <a class="menu-link" href="/Home/Bitacora">
                                <svg class="menu-icon" viewBox="0 0 24 24"><path d="M3 3h18v2H3V3zm0 4h18v2H3V7zm0 4h18v2H3v-2zm0 4h18v2H3v-2zm0 4h18v2H3v-2z" /></svg>
                                Ver Bitácora
                            </a>
                        </li>
                        <li>
                            <a class="menu-link" href="/Home/Logout">
                                <svg class="menu-icon" viewBox="0 0 24 24"><path d="M16 13v-2H7V8l-5 4 5 4v-3h9z"/></svg>
                                Salir
                            </a>
                        </li>
                    </ul>
                </div>
            }

            <div class="main-content @(!string.IsNullOrEmpty(usuarioEmail) ? "with-menu" : "no-menu")">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</body>
</html>
